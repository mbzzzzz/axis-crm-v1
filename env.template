# ============================================
# AXIS CRM - Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)

# ============================================
# Supabase Auth + Database
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_DATABASE_URL=postgres_connection_string
SUPABASE_SERVICE_ROLE_KEY=service_role_key_for_storage

# ============================================
# Authentication (OAuth redirect target)
# ============================================
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ============================================
# Email (Resend)
# ============================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL="Axis CRM <noreply@axis.crm>"

# ============================================
# Groq API (for AI-powered property description generation via Composio MCP)
# ============================================
GROQ_API_KEY=your_groq_api_key

# ============================================
# Gmail Integration (for sending invoices via email)
# ============================================
# Get these from Google Cloud Console > APIs & Services > Credentials
# See GMAIL_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# For Production: https://axis-crm-v1.vercel.app/api/integrations/google/callback
# For Local: http://localhost:3000/api/integrations/google/callback
GOOGLE_REDIRECT_URI=https://axis-crm-v1.vercel.app/api/integrations/google/callback
# Optional: System-wide fallback (if not using per-user OAuth)
GMAIL_REFRESH_TOKEN=
GMAIL_SENDER_EMAIL=

# ============================================
# WhatsApp Integration (WhatsApp Cloud API - Meta)
# ============================================
# Users connect their own WhatsApp Business accounts via Settings
# No global environment variables needed - each user provides their own credentials
# See WHATSAPP-SETUP.md for setup instructions

# ============================================
# Paddle Payment Gateway
# ============================================
# Get these from Paddle Dashboard > Developer Tools > API Keys
# See PADDLE-SETUP.md for detailed setup instructions
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox
NEXT_PUBLIC_PADDLE_PUBLIC_KEY=your_paddle_public_key
PADDLE_SECRET_KEY=your_paddle_secret_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret
PADDLE_VENDOR_ID=your_paddle_vendor_id
# Price IDs from Paddle Dashboard > Products > Prices
PADDLE_PRICE_ID_PROFESSIONAL=your_professional_price_id
PADDLE_PRICE_ID_BUSINESS=your_business_price_id
PADDLE_PRICE_ID_ENTERPRISE=your_enterprise_price_id

