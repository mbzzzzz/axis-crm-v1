{
	"info": {
		"_postman_id": "axis-crm-properties-test",
		"name": "AXIS CRM - Properties API",
		"description": "Collection for testing AXIS CRM property listing and management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Property Listing",
			"item": [
				{
					"name": "Get All Properties",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 or 401\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 401]);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    pm.test(\"Response is an array\", function () {",
									"        pm.expect(pm.response.json()).to.be.an('array');",
									"    });",
									"    ",
									"    pm.test(\"Properties have required fields\", function () {",
									"        const properties = pm.response.json();",
									"        if (properties.length > 0) {",
									"            const property = properties[0];",
									"            pm.expect(property).to.have.property('id');",
									"            pm.expect(property).to.have.property('title');",
									"            pm.expect(property).to.have.property('address');",
									"            pm.expect(property).to.have.property('city');",
									"            pm.expect(property).to.have.property('state');",
									"            pm.expect(property).to.have.property('price');",
									"        }",
									"    });",
									"} else if (pm.response.code === 401) {",
									"    pm.test(\"Unauthorized response structure\", function () {",
									"        const response = pm.response.json();",
									"        pm.expect(response).to.have.property('error');",
									"        pm.expect(response).to.have.property('code');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/properties",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"properties"
							]
						},
						"description": "Get all properties for the authenticated user. Requires Clerk authentication."
					},
					"response": []
				},
				{
					"name": "Get Property by ID",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200, 401, 404, or 500\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 401, 404, 500]);",
									"});",
									"",
									"if (pm.response.code === 500) {",
									"    console.log(\"Error response:\", pm.response.json());",
									"}",
									"",
									"if (pm.response.code === 200) {",
									"    pm.test(\"Response is a single property object\", function () {",
									"        const property = pm.response.json();",
									"        pm.expect(property).to.be.an('object');",
									"        pm.expect(property).to.have.property('id');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/properties?id=1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"properties"
							],
							"query": [
								{
									"key": "id",
									"value": "1"
								}
							]
						},
						"description": "Get a single property by ID. Requires Clerk authentication and property must belong to the authenticated user."
					},
					"response": []
				},
