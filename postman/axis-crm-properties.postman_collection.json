		},
		{
			"name": "Property Creation",
			"item": [
				{
					"name": "Create Property",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201, 400, 401, or 500\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([201, 400, 401, 500]);",
									"});",
									"",
									"if (pm.response.code === 500) {",
									"    console.log(\"Error response:\", pm.response.json());",
									"    const response = pm.response.json();",
									"    if (response.details) {",
									"        console.log(\"Error details:\", JSON.stringify(response.details, null, 2));",
									"    }",
									"}",
									"",
									"if (pm.response.code === 201) {",
									"    pm.test(\"Property created successfully\", function () {",
									"        const property = pm.response.json();",
									"        pm.expect(property).to.have.property('id');",
									"        pm.expect(property).to.have.property('title');",
									"        pm.expect(property).to.have.property('created_at');",
									"        ",
									"        // Save property ID for other tests",
									"        pm.environment.set('property_id', property.id);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Test Property Downtown\",\n  \"description\": \"Beautiful 2-bedroom apartment in downtown area with modern amenities\",\n  \"address\": \"123 Main Street\",\n  \"city\": \"Lahore\",\n  \"state\": \"punjab\",\n  \"zipCode\": \"54000\",\n  \"propertyType\": \"residential\",\n  \"status\": \"available\",\n  \"price\": 25000000,\n  \"currency\": \"USD\",\n  \"sizeSqft\": 1500,\n  \"bedrooms\": 2,\n  \"bathrooms\": 2,\n  \"yearBuilt\": 2020,\n  \"amenities\": [\"Swimming Pool\", \"Parking\", \"Security\"],\n  \"images\": [],\n  \"purchasePrice\": 20000000,\n  \"estimatedValue\": 25000000,\n  \"monthlyExpenses\": 50000,\n  \"commissionRate\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/properties",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"properties"
							]
						},
						"description": "Create a new property. Requires Clerk authentication. This tests the fixed INSERT statement that excludes auto-generated fields."
					},
					"response": []
				}
			],
			"description": "Endpoints for creating properties"
		}
	],
