{
  "name": "axis-browser-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node ./scripts/build.mjs",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "package:chrome": "web-ext build --source-dir dist/chrome --artifacts-dir dist/artifacts --overwrite-dest",
    "package:firefox": "web-ext build --source-dir dist/firefox --artifacts-dir dist/artifacts --overwrite-dest"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "webextension-polyfill": "^0.11.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.273",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/webextension-polyfill": "^0.11.0",
    "@vitejs/plugin-react": "^4.3.3",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "web-ext": "^8.3.0"
  }
}

