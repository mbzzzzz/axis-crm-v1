{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@axis/*": ["src/*"],
      "@/*": ["../src/*"]
    },
    "types": ["chrome", "webextension-polyfill"]
  },
  "include": ["src/**/*", "../src/lib/card-themes.ts"]
}

